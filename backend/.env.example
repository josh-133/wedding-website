# Admin password for accessing the dashboard
ADMIN_PASSWORD=your_secure_password_here

# Secret key for JWT token signing (generate a random string)
# You can generate one with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_random_secret_key_here

# Registry URL (external registry like Zola, The Knot, etc.)
REGISTRY_URL=https://your-registry-url.com

# Database URL (default uses SQLite)
# For Render with persistent disk, use: sqlite:////var/data/wedding.db
DATABASE_URL=sqlite:///../data/wedding.db

# CORS Origins (comma-separated list of allowed frontend URLs)
# For production, set to your frontend URL e.g., https://your-wedding-site.onrender.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
